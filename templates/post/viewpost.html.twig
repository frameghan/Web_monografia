{% extends 'base.html.twig' %}

{% block title %}view POST{% endblock %}

{% block body %}
{{parent()}}

   <div class="container">

            <div class="row">
                <div class="col-md-6">
                    <img src=" {{ asset('uploads/post/' ~ post.imagename) }}" width="100%" alt="">
                </div>
                <div class="col-md-6">
                        <strong>Autor:</strong>{{post.user.username}}
                        <hr>
                        {{post.postcontent}}
                </div>
            </div>
   </div>
<hr>
<div class="row"> 
    <div class="col-md-12">
        {{form(form)}}
    </div>
</div>

<div class="container"> 
    <div class="col-md-12">
      <table class="table">
        <tr class="table-active">
            <td>#</td>
            <td>comentario</td>
        </tr>

        <tr>
            {% for index, comment in comments%}
                    <td>{{index+1}}</td>
                   
                    <td>" {{comment.comment}}"</td>
            
            {% endfor%}
        </tr>
      </table>
    </div>
</div>

{% endblock %}
