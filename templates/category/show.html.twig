{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
{{parent()}}
<br>
<div class="container">
    <h1>Categoria</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Ver lista</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-dark">Editar</a>

    {{ include('category/_delete_form.html.twig') }}
</div>

{% endblock %}
