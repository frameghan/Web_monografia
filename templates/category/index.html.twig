{% extends 'base.html.twig' %}

{% block title %}Regiones{% endblock %}

{% block body %}
{{parent()}}
<div class="container my-3">
    <h1>Categorias</h1>
     <a type="button" class="btn btn-dark" href="{{ path('app_category_new') }}">Create new</a><hr>
    <table class="table table-dark">
        <thead>
            <tr >
                <th>Id</th>
                <th>Nombre</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class ="btn btn-secondary">mostrar</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}"class="btn btn-light">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
   
{% endblock %}
